<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_f4f4f4">

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/main_rl_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.vincent.mylibrary.view.CustomTabView
            android:id="@+id/main_ct_buttom_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color_white_ffffff"/>

        <ImageView
            android:id="@+id/main_iv_voice"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/size_28"
            android:layout_height="@dimen/size_28" />

    </RelativeLayout>


    <TextView
        android:layout_above="@id/main_rl_menu"
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_1"
        android:background="@color/color_gray_e5e5e5"/>

    <RelativeLayout
        android:layout_above="@id/textView2"
        android:id="@+id/main_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
