<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_f4f4f4"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_150">


        <com.youth.banner.Banner
            android:id="@+id/frg_rom_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:background="@drawable/shape_background_white"
            android:id="@+id/frg_room_add"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:alpha="0.5"
            android:gravity="center"
            android:layout_width="@dimen/size_44"
            android:layout_height="@dimen/size_44">


            <ImageView
                android:layout_alignParentRight="true"
                android:src="@mipmap/common_icon_add"
                android:layout_width="@dimen/size_22"
                android:layout_height="@dimen/size_22" />

        </LinearLayout>


    </FrameLayout>



    <com.vincent.julie.view.EmptyRecyclerView
        android:id="@+id/frg_room_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"/>

</LinearLayout>