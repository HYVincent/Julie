<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_gray_f5f5f5"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/include_layout_title"/>

    <LinearLayout
        android:layout_marginTop="@dimen/size_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_white_ffffff">


        <RelativeLayout
            android:background="@color/color_white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_16"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/color_black_333333"
                android:text="@string/add_device_text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/add_device_iv_1"
                android:layout_marginRight="@dimen/size_16"
                android:layout_alignParentRight="true"
                android:src="@mipmap/common_icon_arrow_right"
                android:layout_width="@dimen/size_22"
                android:layout_height="@dimen/size_22" />

            <TextView
                android:layout_marginRight="@dimen/size_5"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/add_device_iv_1"
                android:id="@+id/add_device_iv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <View
            android:layout_marginRight="@dimen/size_16"
            android:background="@color/color_blue_63d8ff"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1"/>

        <RelativeLayout
            android:background="@color/color_white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44">

            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_16"
                android:textSize="@dimen/text_size_12sp"
                android:textColor="@color/color_black_333333"
                android:text="@string/add_device_text_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/add_device_iv_2"
                android:layout_marginRight="@dimen/size_16"
                android:layout_alignParentRight="true"
                android:src="@mipmap/common_icon_arrow_right"
                android:layout_width="@dimen/size_22"
                android:layout_height="@dimen/size_22" />

            <TextView
                android:layout_marginRight="@dimen/size_5"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/add_device_iv_2"
                android:id="@+id/add_device_iv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </LinearLayout>



</LinearLayout>