<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_white_ffffff"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_44">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/item_evironmental_parameter_tag"
        android:layout_marginLeft="@dimen/size_15"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30" />

    <LinearLayout
        android:layout_marginLeft="@dimen/size_10"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/item_evironmental_parameter_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="fffff"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/text_size_14sp"
            android:id="@+id/item_evironmental_parameter_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="fffff"
            android:layout_marginTop="@dimen/size_3"
            android:textColor="@color/color_black_333333"
            android:textSize="@dimen/text_size_12sp"
            android:id="@+id/item_evironmental_parameter_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:layout_marginRight="@dimen/size_15"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/item_evironmental_parameter_iv_1"
        android:src="@mipmap/common_icon_arrow_right"
        android:layout_marginTop="@dimen/size_3"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/text_size_12sp"
        android:layout_width="@dimen/size_18"
        android:layout_height="@dimen/size_18" />

    <TextView
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/item_evironmental_parameter_iv_1"
        android:layout_marginRight="@dimen/size_5"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/text_size_14sp"
        android:id="@+id/item_evironmental_parameter_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>