<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray_f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/include_layout_title"/>

    <RelativeLayout
        android:id="@+id/setting_rl_upgrade"
        android:background="@color/color_white_ffffff"
        android:layout_marginTop="@dimen/size_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44">

        <ImageView
            android:id="@+id/setting_iv_1"
            android:src="@mipmap/setting_icon_upgrade"
            android:layout_marginLeft="@dimen/size_16"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/size_22"
            android:layout_height="@dimen/size_22" />

        <TextView
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@color/color_black_333333"
            android:layout_marginLeft="@dimen/size_10"
            android:layout_toRightOf="@id/setting_iv_1"
            android:text="@string/setting_text_upgrade"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/common_icon_arrow_right"
            android:layout_marginRight="@dimen/size_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/size_22"
            android:layout_height="@dimen/size_22" />

    </RelativeLayout>

</LinearLayout>